<%- include ../includes/header %>
<div class="container">
	<div class="row">
	        <div class="panel panel-default">
	            <div class="panel-heading">
	                <h3>
											<%= keyword%>
									</h3>
	            </div>
	            <div class="panel-body">
	                <% if(movies && movies.length>0){%>
	                    <% movies.forEach(function (item, index) { %>
			                <div class="col-md-2">
				                <div class="thumbnail">
					                <a href="/detail/<%= item._id %>">
                            <%if(item.poster.indexOf('http')>-1){ %>
                            <img src="<%= item.poster %>" alt="<%= item.title %>" style="width:149px;height:100px">
                            <% }else{%>
                            <img src="/upload/<%= item.poster %>" alt="<%= item.title %>" style="width:149px;height:100px">
                            <% }%>
						                <div class="caption">
							                <h3><%=item.title %></h3>
							                <p>
								                <a href="/detail/<%= item._id %>" class="btn btn-primary" role="button">观看预告片</a>
							                </p>
						                </div>
					                </a>
				                </div>
			                </div>
		                <% }) %>
                    <% } %>
	            </div>
	        </div>
          <ul class="pagination">
            <% for(var i = 0;i<totalPage;i++){%>
            <% if(currentPage == (i+1)){%>
              <li class= "active">
                <span>
                  <%=currentPage%>
                </span>
              </li>
            <% }else{%>
              <li>
                <a href="/results?<%= query%>&p=<%= i%>">
                    <%= i+1%>
                </a>
              </li>
            <% }}%>
          </ul>
  </div>
</div>

<%- include ../includes/footer %>
